<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs') %>  <!--  Incluye el HEAD  -->
  </head>

  <header>
    <%- include('../partials/header.ejs') %>  <!--  Incluye el HEADER  -->
  </header>

  <body>
    
    <form action="/entregas/create" method="POST" class="formularioLog" enctype="multipart/form-data">
        <div class="createEntregas">

            <label>Nombre</label>
            <input type="text" name="nombre" class="form-control">

            <label>Descripción</label>
            <input type="text" name="descripcion" class="form-control">
            
            <label>Superficie</label>
            <input type="text" name="superficie" class="form-control">

            <label>Ubicación</label>
            <input type="text" name="ubicacion" class="form-control">

            <label>Enlace del video de youtube</label>
            <input type="text" name="video" class="form-control">

            <label>Modelo</label>
            <select 
                name="modelo" 
                class="form-select">
                    <option value=""></option>
                        <% modelos.forEach(modelo=>{ %> 
                            <option value= "<%= modelo.id %>"
                            <%= locals.oldData && (modelo === oldData.modelo) ? 'select' : null %> >    
                            <%= modelo.nombre %>    
                            </option>
                        <% }) %>
            </select>

            <label>Imagen</label>
            <input 
                type="file"
                name="imagen"
                class="form-control">

        </div>

        <div class="botonCreate">
          <button 
              type="submit">SUBIR PRODUCTO
          </button>
      </div>

    </form>
      
  </body>

  <footer>
    <%- include('../partials/footer.ejs') %>  <!--  Incluye el FOOTER  -->
  </footer>

</html>