<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head.ejs') %>  <!--  Incluye el HEAD  -->
    </head>

    <header>
        <%- include('../partials/header.ejs') %>  <!--  Incluye el HEADER  -->
    </header>

    <body>
    
        <h1>INICIAR SESIÓN</h1>

        <div class="bodyLogin">
            <form>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">Nunca compartiremos su correo electrónico con nadie más.</div>
                </div>
                <div class="mb-3 campoParaOjo">
                    <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                    <input type="password" name="contraseña" class="form-control" id="contraseña" required>
                    <span><i 
                        class="fas fa-eye" 
                        id="Eye"></i>
                    </span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                </div>
                <div class="botonLogin">
                    <button type="submit" class="btn btn-info"><i class="fas fa-sign-in-alt"></i> Ingresar</button>
                </div>
            </form>

            <div class="botonLogin">
                <a href="/usuario/register"><button type="submit" class="btn btn-secondary"><i class="fas fa-user-plus"></i> | Crea tu cuenta</button></a>
            </div>
        </div>
    </body>

    <footer>
        <%- include('../partials/footer.ejs') %>  <!--  Incluye el FOOTER  -->
    </footer>
    <script src="/js/login.js"></script>
</html>