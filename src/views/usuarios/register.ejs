<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head.ejs') %>  <!--  Incluye el HEAD  -->
    </head>

    <header>
        <%- include('../partials/header.ejs') %>  <!--  Incluye el HEADER  -->
    </header>

    <body>
    
        <h1>CREA TU CUENTA!</h1>

        <form action="/usuario/register" method="POST" class="formularioLog"> 
          
            <div class="bodyRegister">
                <label>NOMBRE:</label>
                <input type="text" name="nombre" class="form-control" placeholder="Escribe aqui tu nombre">

                <label>APELLIDO:</label>
                <input type="text" name="apellido" class="form-control" placeholder="Escribe aqui tu apellido">

                <label>EMAIL:</label>
                <input type="email" name="email" class="form-control" placeholder="Escribe aqui tu email">

                <label>CONTRASEÑA:</label>
                <input type="password" name="contraseña" class="form-control" placeholder="Escribe aqui tu contraseña">

                <div class="botonRegister">
                    <button type="submit" class="btn btn-info" >REGISTRARSE!</button>
                </div>

                <br>

                <div class="tengoCuenta">
                    <a href="/usuario/login">Ya tengo una cuenta!</a>
                </div>  
            </div>

        </form>

    </body>

    <footer>
        <%- include('../partials/footer.ejs') %>  <!--  Incluye el FOOTER  -->
    </footer>

</html>